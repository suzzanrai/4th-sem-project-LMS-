@model IEnumerable<Practice_Project.Models.StudentVm>

@{
    ViewData["Title"] = "Students List";
}

<h2>Students Management</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Roll Number</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.RollNumber</td>
            <td>
                <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                    @(item.IsActive ? "Active" : "Inactive")
                </span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>