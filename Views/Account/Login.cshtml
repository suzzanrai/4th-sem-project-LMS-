@model dynamic

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Library System Login</h3>
                </div>
                <div class="card-body p-4">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" class="form-control" placeholder="admin@example.com" required autofocus />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" required />
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
                    </form>

                    <!-- Registration Button Section -->
                    <div class="text-center mt-4">
                        <p class="mb-3">Don't have an account?</p>
                        <!-- Option 1: Button -->
                        <a asp-action="Register" asp-controller="Account" class="btn btn-success btn-lg">
                            <i class="bi bi-person-plus"></i> Create New Account
                        </a>
                        
                        <!-- Option 2: Link (if you prefer a link instead) -->
                        <!-- <div class="mt-2">
                            <a asp-action="Register" asp-controller="Account" class="btn btn-link">Register as new user</a>
                        </div> -->
                    </div>

                </div>
                <div class="card-footer text-center text-muted">
                    <div class="row">
                        <div class="col">
                            <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none">Forgot Password?</a>
                        </div>
                        <div class="col">
                            <a asp-action="Index" asp-controller="Home" class="text-decoration-none">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>