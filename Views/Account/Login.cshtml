@model dynamic

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="Login" method="post">
    <div class="mb-4">
        <label class="form-label">Email Address</label>
        <input type="email" name="email" class="form-control form-control-lg" 
               placeholder="admin@example.com" required autofocus />
    </div>

    <div class="mb-4">
        <label class="form-label">Password</label>
        <input type="password" name="password" class="form-control form-control-lg" 
               placeholder="Enter your password" required />
    </div>

    <div class="d-grid mb-4">
        <button type="submit" class="btn btn-primary btn-login">
            Sign In
        </button>
    </div>
</form>

<div class="text-center">
    <p class="mb-3 text-muted">Don't have an account?</p>
    <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-register w-100 mb-4">
        Create New Account
    </a>

    <div class="footer-links d-flex justify-content-between mt-4">
        <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
        <a asp-controller="Home" asp-action="Index">Back to Home</a>
    </div>
</div>

<div class="text-center mt-4">
    <small class="text-muted">
        Only authorized Librarians and Admins can access this system.
    </small>
</div>