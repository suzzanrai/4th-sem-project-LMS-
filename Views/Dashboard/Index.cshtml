@model Practice_Project.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    string currentDate = DateTime.Today.ToString("dddd, MMMM dd, yyyy");
}

<div class="content">
    <div class="main-content">

        <!-- Header Card with Current Date -->
        <div class="card shadow-sm border-0 mb-5">
            <div class="card-body text-center bg-gradient text-white py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h2 class="display-5 fw-bold mb-2">Library Dashboard</h2>
                <p class="display-6 mb-1">@currentDate</p>
                <small class="opacity-75">Welcome back! Everything is running smoothly.</small>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-3 col-sm-6">
                <div class="card text-white bg-primary shadow-sm border-0 h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-people fs-2 me-3"></i>
                        <div>
                            <h4 class="mb-0">@Model.TotalStudents</h4>
                            <small>Total Students</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="card text-white bg-success shadow-sm border-0 h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-book fs-2 me-3"></i>
                        <div>
                            <h4 class="mb-0">@Model.TotalBooks</h4>
                            <small>Total Books</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="card text-white bg-info shadow-sm border-0 h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-journal-text fs-2 me-3"></i>
                        <div>
                            <h4 class="mb-0">@Model.CurrentlyIssued</h4>
                            <small>Currently Issued</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="card text-white bg-secondary shadow-sm border-0 h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-check-circle fs-2 me-3"></i>
                        <div>
                            <h4 class="mb-0">0</h4>
                            <small>Overdue Books</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Stats -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-book-half fs-1 text-success mb-3"></i>
                        <h3 class="mb-0">@Model.AvailableBooks</h3>
                        <p class="text-muted mb-0">Available Books</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-pen fs-1 text-primary mb-3"></i>
                        <h3 class="mb-0">@Model.TotalAuthors</h3>
                        <p class="text-muted mb-0">Total Authors</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-currency-dollar fs-1 text-danger mb-3"></i>
                        <h3 class="mb-0">@Model.TotalPendingFine</h3>
                        <p class="text-muted mb-0">Pending Fines</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Success Message (Replacing Overdue List) -->
        <div class="card shadow-lg border-0">
            <div class="card-body text-center py-5 bg-light">
                <i class="bi bi-check-circle-fill fs-1 text-success mb-4"></i>
                <h3 class="text-success fw-bold">All Books Are On Time!</h3>
                <p class="text-muted lead">No overdue books detected. Excellent management!</p>
            </div>
        </div>

    </div>
</div>