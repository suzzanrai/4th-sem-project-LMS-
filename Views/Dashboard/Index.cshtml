@model Practice_Project.Models.DashboardViewModel

@{
    ViewData["Title"] = "Library Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Welcome Section -->
    <div class="row justify-content-center mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary">Welcome to Our Library Dashboard</h1>
   
        </div>
    </div>

    <!-- Dashboard Metrics Cards -->
    <div class="row justify-content-center">
        <!-- Total Students -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill text-info" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Total Students</h5>
                    <h2 class="text-info">@Model.TotalStudents</h2>
                    <p class="card-text">Registered library members ready to explore.</p>
                </div>
            </div>
        </div>

        <!-- Total Books -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-book-fill text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Total Books</h5>
                    <h2 class="text-success">@Model.TotalBooks</h2>
                    <p class="card-text">Books in our collection, waiting to be discovered.</p>
                </div>
            </div>
        </div>

        <!-- Total Authors -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-fill text-warning" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Total Authors</h5>
                    <h2 class="text-warning">@Model.TotalAuthors</h2>
                    <p class="card-text">Creative minds behind the stories.</p>
                </div>
            </div>
        </div>

        <!-- Total Categories -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-tags-fill text-secondary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Total Categories</h5>
                    <h2 class="text-secondary">@Model.TotalCategories</h2>
                    <p class="card-text">Genres to help you find your next read.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row: Issued and Available Books -->
    <div class="row justify-content-center">
        <!-- Currently Issued Books -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-right-circle-fill text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Currently Issued</h5>
                    <h2 class="text-primary">@Model.CurrentlyIssued</h2>
                    <p class="card-text">Books out on loanâ€”keep them circulating!</p>
                </div>
            </div>
        </div>

       <!-- Overdue and Fines (Placeholder as per controller) -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Overdue & Fines</h5>
                    <h2 class="text-danger">@Model.OverdueCount</h2>
                    <p class="card-text">Total Pending Fine: @Model.TotalPendingFine</p>
                    <small class="text-muted">Stay on top of returns to avoid fees!</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Encouragement -->
    <div class="row justify-content-center mt-4">
        <div class="col-12 text-center">
            <p class="text-muted">Thank you for being part of our library community. Let's keep the pages turning and minds expanding!</p>
        </div>
    </div>
</div>

<style>
    /* Custom styles for better alignment and spacing */
    .card {
        border-radius: 10px;
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .h-100 {
        height: 100%;
    }
    .display-4 {
        font-weight: 300;
    }
    .blockquote {
        font-style: italic;
    }
</style>