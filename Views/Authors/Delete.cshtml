@model Practice_Project.Models.Authors

<h2>Delete Author</h2>
<hr />

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this author?</strong>
</div>

<div class="card p-3">

    <h4>@Model.Name</h4>

    @if (!string.IsNullOrEmpty(Model.Biography))
    {
        <p><strong>Biography:</strong> @Model.Biography</p>
    }
    else
    {
        <p><strong>Biography:</strong> (No biography available)</p>
    }

</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="AuthorId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>