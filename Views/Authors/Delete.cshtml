<!-- Views/Authors/Delete.cshtml -->
@model Practice_Project.Entities.Author

@{
    ViewData["Title"] = "Delete Author";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h3><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h3>
                </div>
                <div class="card-body text-center">
                    <h4 class="text-danger">Are you sure you want to delete this author?</h4>
                    <hr />
                    <dl class="row text-start">
                        <dt class="col-sm-4 fw-bold">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 fw-bold">Books Written:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-warning">@Model.Books.Count</span>
                            @if (Model.Books.Any())
                            {
                                <br /><small class="text-muted">Warning: Deleting author will affect related books!</small>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.AuthorId" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash"></i> Yes, Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>