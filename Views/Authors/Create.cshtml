<!-- Views/Authors/Index.cshtml -->
@model Practice_Project.Models.AuthorViewModel
@{
    ViewData["Title"] = "Create Author";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="bi bi-person-plus"></i> Add New Author
                    </h2>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post">
                        @* Hidden field if needed in future *@
                        @* <input type="hidden" asp-for="AuthorId" /> *@

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold text-primary"></label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter author full name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Biography" class="form-label fw-bold text-primary">Biography (Optional)</label>
                            <textarea asp-for="Biography" class="form-control" rows="7" 
                                      placeholder="Write a short biography about the author..."></textarea>
                            <span asp-validation-for="Biography" class="text-danger"></span>
                        </div>

                        <div class="d-grid d-md-flex justify-content-md-end gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="bi bi-check-lg"></i> Create Author
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

