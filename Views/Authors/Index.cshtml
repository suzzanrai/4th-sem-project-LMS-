@model IEnumerable<Practice_Project.Entities.Author>
@{
    ViewData["Title"] = "Authors";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold">Authors Management</h2>
    <a asp-action="Create" class="btn btn-success btn-lg">
        Add New Authors
    </a>
</div>
@if (!Model.Any())
{
    <p>No authors found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Biography</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>@(string.IsNullOrEmpty(author.Biography) ? "No biography" : author.Biography)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@author.AuthorId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}