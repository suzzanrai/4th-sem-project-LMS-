@model IEnumerable<Practice_Project.Entities.Author>
@{
    ViewData["Title"] = "Authors";
}
<div class="container mt-4">
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-success fw-bold">Authors Management</h2>
  
    @*adding search *@
    
    
    <form asp-action="Index" method="get" class="d-flex align-items-center gap-1">
        <input class="form-control"
               type="text"
               name="searchString"
               placeholder="Search by Student Name"
               aria-label="Search"
               value="@ViewData["CurrentFilter"]"/>

        <button class="btn btn-outline-success" type="submit">
            Search
        </button>
      

        <a asp-action="Index" class="btn btn-outline-success">
            Reset
        </a>
    </form>  
    
    
    <a asp-action="Create" class="btn btn-success btn-lg">
        Add New Authors
    </a>
</div>
@if (!Model.Any())
{
    <p>No authors found.</p>
}
else
{
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
        <tr >
            <th>Name</th>
            <th>Biography</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>@(string.IsNullOrEmpty(author.Biography) ? "No biography" : author.Biography)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@author.AuthorId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
</div>