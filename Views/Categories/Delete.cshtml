@model Practice_Project.Entities.Category  

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <h2 class="text-danger">Delete Category</h2>
    <hr />

    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this category?</strong>
        <br />This action cannot be undone.
    </div>

    <div class="card border-danger mb-4">
        <div class="card-body">
            <h4 class="card-title text-primary">@Model.Name</h4>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p><strong>Description:</strong> @Model.Description</p>
            }
            else
            {
                <p><strong>Description:</strong> <em class="text-muted">No description available.</em></p>
            }

            <p><strong>Books in this category:</strong> 
                <span class="badge bg-warning">@Model.Books.Count</span>
            </p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.CategoryId" />
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-danger btn-lg">
            Yes, Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>