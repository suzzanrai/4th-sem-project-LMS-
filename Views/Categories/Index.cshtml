@model IEnumerable<Practice_Project.Entities.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success fw-bold">Categories Management</h2>
        <form asp-action="Index" method="get" class="d-flex align-items-center gap-1">
            <input class="form-control"
                   type="text"
                   name="searchString"
                   placeholder="Search by Student Name"
                   aria-label="Search"
                   value="@ViewData["CurrentFilter"]"/>

            <button class="btn btn-outline-success" type="submit">
                Search
            </button>
      

            <a asp-action="Index" class="btn btn-outline-success">
                Reset
            </a>
        </form>
        <a asp-action="Create" class="btn btn-success btn-lg">
            Add New Category
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>No categories found</h4>
            <p>Click the button above to create your first category!</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Books Count</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td><strong>@category.Name</strong></td>
                            <td>
                                @if (string.IsNullOrEmpty(category.Description))
                                {
                                    <em class="text-muted">No description</em>
                                }
                                else
                                {
                                    @(category.Description.Length > 100 
                                        ? category.Description.Substring(0, 100) + "..." 
                                        : category.Description)
                                }
                            </td>
                            <td>
                                <span class="badge bg-info fs-6">@category.Books.Count</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@category.CategoryId" 
                                   class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@category.CategoryId" 
                                   class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Bootstrap Icons (optional but nice) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">