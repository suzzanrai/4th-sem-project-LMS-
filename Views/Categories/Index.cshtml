@model IEnumerable<Practice_Project.Models.Categorys>

<h2>Categories List</h2>
<hr />

<a asp-action="Create" class="btn btn-success mb-3">+ Add New Category</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                @if (string.IsNullOrEmpty(category.Description))
                {
                    <span class="text-muted">No description</span>
                }
                else
                {
                    @category.Description
                }
            </td>
            <td>
                
                <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>