@model Practice_Project.Entities.Book
@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-5">
    <h2 class="text-danger">Delete Book</h2>
    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this book permanently?</strong>
    </div>

    <div class="card border-danger">
        <div class="card-body">
            <h4 class="text-primary">@Model.Title</h4>
            <p><strong>Author:</strong> @Model.Author.Name</p>
            <p><strong>Category:</strong> @Model.Category.Name</p>
            <p><strong>ISBN:</strong> <code>@Model.ISBN</code></p>
            <p><strong>Year:</strong> @Model.PublicationYear</p>
            <p><strong>Copies:</strong> @Model.QuantityAvailable / @Model.TotalQuantity</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" name="id" value="@Model.BookId" />
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger btn-lg">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>