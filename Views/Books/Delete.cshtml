@model Practice_Project.Models.Books

<h2>Delete Book</h2>
<hr />

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this book?
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><strong>ISBN:</strong> @Model.ISBN</p>
        <p class="card-text"><strong>Author:</strong> @Model.Author.Name</p>
        <p class="card-text"><strong>Category:</strong> @Model.Category.Name</p>
        <p class="card-text"><strong>Publication Year:</strong> @Model.PublicationYear</p>
        <p class="card-text"><strong>Publication Date:</strong> @Model.PublicationDate.ToShortDateString()</p>
        <p class="card-text"><strong>Total Quantity:</strong> @Model.TotalQuantity</p>
        <p class="card-text"><strong>Quantity Available:</strong> @Model.QuantityAvailable</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="BookId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>