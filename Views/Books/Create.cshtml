@model Practice_Project.Models.BookViewModel
@{
    ViewData["Title"] = "Add New Book";
}

<div class="container mt-5">
    <h2 class="text-success mb-4">Add New Book</h2>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Title" class="form-label"></label>
                                <input asp-for="Title" class="form-control form-control-lg" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ISBN" class="form-label"></label>
                                <input asp-for="ISBN" class="form-control form-control-lg" placeholder="13 digits" />
                                <span asp-validation-for="ISBN" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="AuthorId" class="form-label"></label>
                                <select asp-for="AuthorId" class="form-select form-select-lg" asp-items="ViewBag.AuthorId"></select>
                                <span asp-validation-for="AuthorId" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="CategoryId" class="form-label"></label>
                                <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="ViewBag.CategoryId"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PublicationYear" class="form-label"></label>
                                <input asp-for="PublicationYear" class="form-control form-control-lg" type="number" />
                                <span asp-validation-for="PublicationYear" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="TotalQuantity" class="form-label"></label>
                                <input asp-for="TotalQuantity" class="form-control form-control-lg" type="number" />
                                <span asp-validation-for="TotalQuantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="QuantityAvailable" class="form-label"></label>
                                <input asp-for="QuantityAvailable" class="form-control form-control-lg" type="number" />
                                <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PublicationDate" class="form-label"></label>
                                <input asp-for="PublicationDate" class="form-control form-control-lg" type="date" />
                                <span asp-validation-for="PublicationDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label fw-bold">Book is Active</label>
                        </div>

                        <div class="text-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                            <button type="submit" class="btn btn-success btn-lg px-5">Create Book</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

