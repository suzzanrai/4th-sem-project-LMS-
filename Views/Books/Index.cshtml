@model IEnumerable<Practice_Project.Entities.Book>
@{
    ViewData["Title"] = "Books Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success fw-bold">Books Management</h2>
      
        <form asp-action="Index" method="get" class="d-flex align-items-center gap-1">
            <input class="form-control"
                   type="text"
                   name="searchString"
                   placeholder="Search by Student Name"
                   aria-label="Search"
                   value="@Context.Request.Query["CurrentFilter"]"/>

            <button class="btn btn-outline-success" type="submit">
                Search
            </button>
      

            <a asp-action="Index" class="btn btn-outline-success">
                Reset
            </a>
        </form>
        <a asp-action="Create" class="btn btn-success btn-lg">
            Add New Book
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>No books found</h4>
            <p>Start by adding your first book!</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>ISBN</th>
                        <th>Year</th>
                        <th>Available / Total</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td><strong>@book.Title</strong></td>
                            <td>@book.Author.Name</td>
                            <td><span class="badge bg-secondary">@book.Category.Name</span></td>
                            <td><code>@book.ISBN</code></td>
                            <td>@book.PublicationYear</td>
                            <td>
                                <span class="@(book.QuantityAvailable > 0 ? "text-success" : "text-danger") fw-bold">
                                    @book.QuantityAvailable
                                </span>
                                / @book.TotalQuantity
                            </td>
                            <td>
                                @if (book.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">