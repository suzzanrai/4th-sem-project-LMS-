@model Practice_Project.Entities.BookIssue

@{
    ViewData["Title"] = "Return Book";
}

<h2>Return Book</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Book.Title</h5>
        <p><strong>Student:</strong> @Model.Student.Name</p>
        <p><strong>Issue Date:</strong> @Model.IssueDate.ToString("dd-MM-yyyy")</p>
        <p><strong>Due Date:</strong> @Model.DueDate.ToString("dd-MM-yyyy")</p>
        <p><strong>Today (Return Date):</strong> @DateTime.Now.ToString("dd-MM-yyyy")</p>

        @{ 
            var overdueDays = (DateTime.Now - Model.DueDate).Days;
            var fine = overdueDays > 0 ? overdueDays * 1.00m : 0m;
        }

        @if (overdueDays > 0)
        {
            <p class="text-danger">
                <strong>Overdue by @overdueDays days â†’ Fine: @fine.ToString("C")</strong>
            </p>
        }
        else
        {
            <p class="text-success"><strong>No fine - returned on time!</strong></p>
        }
    </div>
</div>

<br />

<form asp-action="Return" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-success">Confirm Return</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>