@model Practice_Project.Models.BookIssueViewModel

@{
    ViewData["Title"] = "Issue New Book";
}

<div class="container mt-4">
    <h2 class="mb-4">Issue New Book</h2>

    <form asp-action="Create" method="post">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="BookId" class="form-label"></label>
                            <select asp-for="BookId" class="form-select" asp-items="@(new SelectList(ViewBag.Books, "Id", "Title"))">
                                <option value="">-- Select Book --</option>
                            </select>
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label"></label>
                            <select asp-for="StudentId" class="form-select" asp-items="@(new SelectList(ViewBag.Students, "Id", "Name"))">
                                <option value="">-- Select Student --</option>
                            </select>
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
            </div>

            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Issue Book
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>

