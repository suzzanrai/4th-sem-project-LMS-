@model IEnumerable<Practice_Project.Entities.BookIssue>

@{
    ViewData["Title"] = "Book Issues";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success fw-bold">Book Issue Management</h2>

        
        <form asp-action="Index" method="get" class="d-flex align-items-center gap-1">
            <input class="form-control"
                   type="text"
                   name="searchString"
                   placeholder="Search by Student Name"
                   aria-label="Search"
                   value="@Context.Request.Query["searchString"]"/>

            <button class="btn btn-outline-success" type="submit">
                Search
            </button>
      

            <a asp-action="Index" class="btn btn-outline-success">
                Reset
            </a>
        </form>
        
        
        <a asp-action="Create" class="btn btn-success btn-lg">
            Issue Book
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Book</th>
                    <th>Student</th>
                    <th>Issue Date</th>
                    <th>Due Date</th>
                    <th>Status</th>
                    <th>Fine</th>
                    <th>Retrun Date</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center py-4 text-muted">No books issued yet.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Book.Title</strong><br /><small>by @item.Book.Author</small></td>
                            <td>@item.Student.Name</td>
                            <td>@item.IssueDate</td>
                            <td>@item.DueDate</td>
                            <td>
                                @if (item.Status == "Returned")
                                {
                                    <span class="badge bg-success">Returned</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">Issued</span>
                                }
                            </td>
                            <td>
                                @if (item.FineAmount > 0)
                                {
                                    <span class="text-danger fw-bold">â‚¹@item.FineAmount</span>
                                }
                                else
                                {
                                    <span class="text-success">-</span>
                                }
                            </td>
                            <td>
                                @if (item.Status == "Issued")
                                {
                                    <a asp-action="Return" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        Return Book
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Returned on @item.ReturnDate.Value</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>