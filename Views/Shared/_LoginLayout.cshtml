<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Arial, sans-serif;
            margin: 0;
            padding: 20px 0;
        }

        .login-container {
            width: 100%;
            max-width: 700px;
            padding: 0 20px;
        }

        .login-card {
            background: white;
            border-radius: 50px;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.5);
            overflow: hidden;
        }

        .login-header {
            background: linear-gradient(135deg, #0d6efd, #0d5bfd);
            padding: 30px 20px;
            text-align: center;
            color: white;
        }

        .login-header h2 {
            font-size: 2.4rem;
            font-weight: 800;
            margin: 0;
        }

        .login-header h2 span {
            color: #ff4757;
        }

        .login-header p {
            margin-top: 12px;
            opacity: 0.95;
            font-size: 1.1rem;
        }

        .login-body {
            padding: 30px 20px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .form-control {
            border-radius: 14px;
            padding: 16px 20px;
            font-size: 1.1rem;
            border: 1px solid #ddd;
            box-shadow: inset 0 1px 4px rgba(0,0,0,0.05);
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.3rem rgba(13, 110, 253, 0.25);
        }

        .btn-login {
            background: linear-gradient(135deg, #0d6efd, #0d5bfd);
            border: none;
            padding: 16px;
            font-size: 1.25rem;
            font-weight: 600;
            border-radius: 14px;
            width: 100%;
        }

        .btn-login:hover {
            background: linear-gradient(135deg, #0b5ed7, #0a58ca);
        }

        .btn-register {
            background-color: #198754;
            border: none;
            padding: 14px;
            font-size: 1.1rem;
            border-radius: 12px;
        }

        .btn-register:hover {
            background-color: #157347;
        }

        .footer-links a {
            color: #6c757d;
            text-decoration: none;
            font-size: 0.95rem;
        }

        .footer-links a:hover {
            color: #0d6efd;
            text-decoration: underline;
        }

        footer {
            position: fixed;
            bottom: 15px;
            width: 100%;
            text-align: center;
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
<div class="login-container">
    <div class="login-card">
        <!-- Header -->
        <div class="login-header">
            <h2><span>L</span>ibrary Management System</h2>
        </div>

        <!-- Form Content from Login.cshtml -->
        <div class="login-body">
            @RenderBody()
        </div>
    </div>
</div>

<footer>
    &copy; 2026 Library Management System. All rights reserved.
</footer>

<!-- Bootstrap JS -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>