        }*/
    </style>
</head>
<body>

    <!-- Top Bar -->
    <div class="top">
        <div class="logo">Library Management System</div>
        <div class="right">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Logout">LOG OUT</a>
            }
        </div>
    </div>

    <!-- Main Container -->
    <div class="main-container">

        <!-- Sidebar -->
        <div class="sidebar">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Student" asp-action="Index"
                   class="@(Context.Request.Path.StartsWithSegments("/Student") ? "active" : "")">
                    <span class="icon">📊</span> Student
                </a>

                <a asp-controller="Authors" asp-action="Index"
                   class="@(Context.Request.Path.StartsWithSegments("/Authors") ? "active" : "")">
                    <span class="icon">👥</span> Authors
                </a>

                <a asp-controller="Categories" asp-action="Index"
                   class="@(Context.Request.Path.StartsWithSegments("/Categories") ? "active" : "")">
                    <span class="icon">🏷️</span> Categories
                </a>

                <a asp-controller="Books" asp-action="Index"
                   class="@(Context.Request.Path.StartsWithSegments("/Books") ? "active" : "")">
                    <span class="icon">📚</span> Books
                </a>

                <a asp-controller="BookIssue" asp-action="Index"
                   class="@(Context.Request.Path.StartsWithSegments("/BookIssue") ? "active" : "")">
                    <span class="icon">🔄</span> Book Issue
                </a>

                <a asp-controller="Pay" asp-action="Index"
                   class="@(Context.Request.Path.StartsWithSegments("/Pay") ? "active" : "")">
                    <span class="icon">💰</span> Fine
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Auth" asp-action="Register"
                       class="@(Context.Request.Path.StartsWithSegments("/Auth/Register") ? "active" : "")">
                        <span class="icon">👤</span> Register Staff
                    </a>
                }
            }
        </div>

        <!-- Content Area -->
        <div class="content">
            <div class="dashboard">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        &copy; 2025 Library Management System. All rights reserved. | 
        <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a>
    </div>

    <!-- Keep jQuery if needed, remove Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>