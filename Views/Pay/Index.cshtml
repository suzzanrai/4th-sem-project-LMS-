@model IEnumerable<Practice_Project.Entities.Fine>

@{
    ViewData["Title"] = "Paid Fines";
}  
<div class="container mt-4">
<div class="d-flex justify-content-between align-items-center mt-4">
    <!-- Title -->
    <h2 class="mb-0 text-success fw-bold">Paid Fine Records</h2>

    <!-- Search Form (with gap from title via parent gap-4) -->

    <form asp-action="Index" method="get" class="d-flex align-items-center gap-1">
        <input class="form-control"
               type="text"
               name="searchString"
               placeholder="Search by Student Name"
               aria-label="Search"
               value="@ViewData["CurrentFilter"]"/>

        <button class="btn btn-outline-success" type="submit">
            Search
        </button>
      

        <a asp-action="Index" class="btn btn-outline-success">
            Reset
        </a>
    </form>

</div>

    <div class="card-body">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
            <tr>
                <th>Student</th>
                <th>Book</th>
                <th>Issue Date</th>
                <th>Due Date</th>
                <th>Return Date</th>
                <th>Fine Amount</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        No paid fines found.
                    </td>
                </tr>
            }
            else
            {
                foreach (var fine in Model)
                {
                    <tr>
                        <td>@fine.Student?.Name</td>
                        <td>@fine.BookIssue?.Book?.Title</td>
                        <td>@fine.BookIssue?.IssueDate.ToString("dd MMM yyyy")</td>
                        <td>@fine.BookIssue?.DueDate.ToString("dd MMM yyyy")</td>
                        <td>@(fine.BookIssue?.ReturnDate.HasValue == true ? fine.BookIssue.ReturnDate.Value.ToString("dd MMM yyyy") : "-")</td>
                        <td>Rs. @fine.Amount</td>
                        
                        
                        <td>
                            <span class="badge bg-success">Paid</span>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>

